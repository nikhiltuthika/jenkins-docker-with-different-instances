pipeline {
    agent any
    tools {
        maven "Maven"
    }
    stages {
        stage("build") {
            steps {
			//checkout in pipeline script
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Java-Techie-jt/devops-automation.git']])
                sh "mvn clean install"
            }
        }
        stage("docker build") {
            steps {
			//install ssh agent and configure in ssh agent in pipeline script
                sshagent(['dockerid']) {
                    sh "ssh -o StrictHostKeyChecking=no ec2-user@15.206.82.192 'docker --version'"
                    sh "ssh -o StrictHostKeyChecking=no ec2-user@15.206.82.192 'docker rmi jenbuildimg'"
                    sh "ssh -o StrictHostKeyChecking=no ec2-user@15.206.82.192 'docker build -t imgname .'"
                }
            }
        }
        stage("tag image") {
            steps {
                sshagent(['dockerid']) {
                    sh "ssh -o StrictHostKeyChecking=no ec2-user@15.206.82.192 'docker tag imgname dusername/dreponame'"
                }
            }
        }
        stage("push image to dockerhub") {
            steps {
			//withCredentials in pipeline script
                withCredentials([string(credentialsId: 'credid', variable: 'variableid')]) {
                    sshagent(['dockerid']) {
                        sh "ssh -o StrictHostKeyChecking=no ec2-user@15.206.82.192 'docker login -u username -p $variableid'"
                        sh "ssh -o StrictHostKeyChecking=no ec2-user@15.206.82.192 'docker push username/repo'"
                    }
                }
            }
        }
    }
}
